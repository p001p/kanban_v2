<Window x:Class="kanban_v2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kanban_v2"
        mc:Ignorable="d"
        Title="the FARM" Height="450" Width="800">
    <Grid>
        <Menu Margin="0,0,0,415">
            <MenuItem Header="Файл">
                
                <MenuItem Header="Создать DB" Click="CreateNewDB"/>
                <MenuItem Header="Открыть DB" Click="OpenDB" />
            </MenuItem>
        </Menu>
        <Grid>
            <Canvas x:Name="Canvas2" Margin="0,19,0,0">
                <Canvas.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF8C9493"/>
                        <GradientStop Color="#FFC1EFEC" Offset="1"/>
                        <GradientStop Color="#FFA1C3C0" Offset="1"/>
                        <GradientStop Color="#FF9BBBB9" Offset="0.997"/>
                        <GradientStop Color="#FF9BBBB9" Offset="1"/>
                    </LinearGradientBrush>
                </Canvas.Background>
                <Canvas.ContextMenu>
                    <ContextMenu>
                        
                        <MenuItem Header="Добавить Income" Click="AddIncomeBox_Click"/>
                       
                    </ContextMenu>
                </Canvas.ContextMenu>
                <TextBlock x:Name="DatabaseNameTextBlock" Canvas.Left="15" TextWrapping="Wrap" Text="TextBlock" Canvas.Top="10"/>
            </Canvas>

        </Grid>
    </Grid>
</Window>
