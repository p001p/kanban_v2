<UserControl x:Class="kanban_v2.TypicalProjectBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:kanban_v2"
             mc:Ignorable="d" Height="320" Width="320">
    <Grid>
        <GroupBox Background="#FFFFC700" HorizontalAlignment="Left" Width="160" Height="320" VerticalAlignment="Center" RenderTransformOrigin="0.523,0.5" Margin="5,0,0,0">
            <Grid Height="310" Margin="-3,0,3,0">
                <Button Content="FOLDER" HorizontalAlignment="Center" Margin="0,242,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.51,-0.393" Width="140"/>
                <Button Content="OPEN FOLDER" HorizontalAlignment="Center" Margin="0,264,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.51,-0.393" Width="140"/>
                <TextBlock x:Name="NameBox" HorizontalAlignment="Center" Margin="0,9,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="Auto" Width="Auto" FontWeight="Bold" FontFamily="Times New Roman" TextAlignment="Center" FontSize="16"/>
                <TextBlock x:Name="OpisBox" HorizontalAlignment="Center" Margin="0,100,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="Auto" Width="Auto" FontFamily="Times New Roman" TextAlignment="Left"/>
                <Button Click="HideZone" Content="?" HorizontalAlignment="Left" Margin="122,289,0,1" Width="21"/>
            </Grid>
        </GroupBox>
        <GroupBox x:Name="Corrector" Background="#FFE8E2CC" HorizontalAlignment="Left" Width="160" Height="320" VerticalAlignment="Center" RenderTransformOrigin="0.523,0.5" Margin="160,0,0,0">
            <Grid>
                <TextBox  x:Name ="NameToBox" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Введите название проекта" VerticalAlignment="Top" Width="140" Height="80" FontWeight="Bold" FontFamily="Arial Black" Background="#FFC5C1C0" Margin="0,9,0,0" RenderTransformOrigin="0.5,0.525"/>
                <TextBox x:Name="OpisToBox" HorizontalAlignment="Center" Margin="0,119,0,0" TextWrapping="Wrap" Text="Описание проекта" VerticalAlignment="Top" Width="140" Height="135"/>
                <Button Click="SaveName" Content="WRITE" HorizontalAlignment="Center" Margin="0,94,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.51,-0.393" Width="140"/>
                <Button Click="SaveOpis" Content="WRITE" HorizontalAlignment="Center" Margin="0,259,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.51,-0.393" Width="140"/>
                <Button Click="DeleteBlockProject" Content="-" HorizontalAlignment="Left" Margin="3,291,0,2" Width="21"/>

            </Grid>
        </GroupBox>
    </Grid>


</UserControl>
